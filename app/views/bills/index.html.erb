<h1 class="display-4 text-center my-4">Bills for <%= @employee.first_name %> <%= @employee.last_name %></h1>

<div class="container">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Amount</th>
        <th>Type</th>
        <th>Date Submitted</th>
      </tr>
    </thead>
    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td><%= bill.amount %></td>
          <td><%= bill.bill_type.capitalize %></td>
          <td><%= bill.created_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= link_to 'New Bill', new_employee_bill_path(@employee), class: 'btn btn-primary btn-block' %>
    </div>
    <div class="col-md-6 mb-3">
      <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary btn-block' %>
    </div>
  </div>
</div>
