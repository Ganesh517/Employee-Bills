<div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1><%= @employee.first_name %> <%= @employee.last_name %></h1>
  
        <div class="card">
          <div class="card-header">
            Employee Details
          </div>
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th style="width: 30%;">Email</th>
                  <td><%= @employee.email %></td>
                </tr>
                <tr>
                  <th>Designation</th>
                  <td><%= @employee.designation %></td>
                </tr>
                <tr>
                  <th>Department</th>
                  <td><%= @employee.department.name %></td>
                </tr>
                <!-- Add more details as needed -->
              </tbody>
            </table>
          </div>
        </div>
  
        <div class="mt-3">
          <%= link_to 'Edit', edit_employee_path(@employee), class: 'btn btn-primary mr-2' %>
          <%= link_to 'Back', employees_path, class: 'btn btn-secondary' %>
        </div>
  
        <div class="mt-4">
          <h2>Bills</h2>
          <% if @bills.any? %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 30%;">Amount</th>
                  <th>Type</th>
                  <th>Date Submitted</th>
                </tr>
              </thead>
              <tbody>
                <% @bills.each do |bill| %>
                  <tr>
                    <td><%= number_to_currency(bill.amount) %></td>
                    <td><%= bill.bill_type.capitalize %></td>
                    <td><%= bill.created_at.strftime("%B %d, %Y") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p>No bills submitted yet.</p>
          <% end %>
        </div>
  
        <div class="mt-3">
          <%= link_to 'Create New Bill', new_employee_bill_path(@employee), class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
  